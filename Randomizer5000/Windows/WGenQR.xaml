<Window x:Class="Randomizer3000.WGenQR" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Width="600" SizeToContent="Height"
        Title="Генератор QR-кодов" Foreground="White"   >
    <Grid x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Image Name = "QrCodeImage" />
        <Button x:Name="BGenQR" Content="Сгенерировать QR-код" Grid.Row="1"/>
    </Grid>
</Window>
