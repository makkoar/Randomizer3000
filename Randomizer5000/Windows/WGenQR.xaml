<Window x:Class="Randomizer5000.WGenQR" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Width="600" SizeToContent="Height"
        Title="Генератор QR-кодов" Background="#FF2D2D30" Foreground="White">
    <Viewbox>
        <Grid x:Name="NotifyGrid">
            <StackPanel Margin="10">
                <Image x:Name="QRCodeImage" Width="400" Height="400" Margin="0,0,0,10" />
                <TextBox Name="Input" Width="400" Height="60" Margin="0,0,0,10" MaxLength="3993" TextWrapping="Wrap" AcceptsReturn="True"/>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="btnSaveQR" Content="Сохранить QR-код" Width="370" Margin="0,0,10,0"/>
                    <Button x:Name="btnOpenFolder" Width="20" Height="20">
                        <Image Margin="1" Source="/Resources/OpenFolder.png"/>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Viewbox>
</Window>
