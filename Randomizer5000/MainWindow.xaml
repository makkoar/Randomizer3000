<Window x:Class="Randomizer5000.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Width="600" SizeToContent="Height"
        Title="Рандомайзер 5000" Background="#FF2D2D30" Foreground="White">
    <Viewbox>
        <StackPanel Margin="10" Width="400">
            <Button x:Name="btnGenPass" Content="Генератор паролей" Margin="0,0,0,10"/>
            <Button x:Name="btnGenQR" Content="Генератор QR-кодов" Margin="0,0,0,10"/>
            <Button x:Name="btnGenMemes" Content="Генератор мемов" IsEnabled="False"/>
        </StackPanel>
    </Viewbox>
</Window>
